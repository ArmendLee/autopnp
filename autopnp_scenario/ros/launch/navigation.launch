<?xml version="1.0"?>
<launch>

  <!-- args -->
  <arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
  <arg name="pc1" default="$(arg robot)-pc1"/>
  <arg name="pc2" default="$(arg robot)-pc2"/>
  <arg name="pc3" default="$(arg robot)-pc3"/>
  <arg name="simulation" default="false"/>
  
  <group>
    <machine name="pc1" address="$(arg pc1)" default="true" unless="$(arg simulation)"/>
    
    <!-- start navigation -->
    <include file="$(find cob_navigation_global)/launch/2dnav_ros_dwa.launch" >
      <!--arg name="map" value="$(find autopnp_scenario)/config/map-ipa-apartment.yaml" /-->
      <arg name="map" value="$(find autopnp_scenario)/config/map-autopnp-conference-clean.yaml" />
    </include>
    
    <!-- start linear navigation -->
	<include file="$(find cob_navigation_global)/launch/2dnav_linear.xml" >
      <arg name="robot" value="$(arg robot)"/>
    </include>
  
  </group>

</launch>
